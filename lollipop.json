{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "background": "#111111",
  "config": {
    "style": {"cell": {"stroke": "transparent"}},
    "legend": {"labelColor": "aliceblue", "titleColor": "aliceblue"},
    "axis": {
      "labelColor": "aliceblue",
      "gridDash": {
        "condition": {
          "test": {"field": "Country", "timeUnit": "Total_Attacks", "equal": 4},
          "value": []
        },
        "value": [2, 2]
      },
      "tickDash": {
        "condition": {
          "test": {"field": "Country", "timeUnit": "Total_Attacks", "equal": 4},
          "value": []
        },
        "value": [2, 2]
      }
    }
  },
  "description": "A ranged dot plot that uses 'layer' to convey changing life expectancy for the five most populous countries (between 1955 and 2000).",
  "width": 400,
  "height": 350,
  "data": {
    "url": "https://raw.githubusercontent.com/nateruze/FIT3179/main/bar_lollipop.csv"
  },
  "transform": [
    {
      "filter": {
        "field": "Country",
        "oneOf": [
          "Colombia ",
          "Peru",
          "El Salvador",
          "United Kingdom",
          "India",
          "Spain",
          "Turkey",
          "United States ",
          "France",
          "Chile",
          "Iraq",
          "Afghanistan",
          "Pakistan",
          "Philippines",
          "Somalia",
          "Nigeria",
          "Thailand",
          "Yemen",
          "Libya"
        ]
      }
    },
    {"filter": {"field": "Attack_Time", "oneOf": ["Pre 9/11", "Post 9/11"]}}
  ],
  "encoding": {
    "x": {
      "field": "Total_Attacks",
      "type": "quantitative",
      "title": "Total Number of Attacks",
      "axis": {"titleColor": "aliceblue"}
    },
    "y": {
      "field": "Country",
      "type": "nominal",
      "title": "Country",
      "axis": {
        "offset": 10,
        "ticks": false,
        "minExtent": 1,
        "domain": false,
        "titleColor": "aliceblue"
      }
    }
  },
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "detail": {"field": "Country", "type": "nominal"},
        "color": {"value": "#E59500"}
      }
    },
    {
      "mark": {"type": "point", "filled": true},
      "encoding": {
        "color": {
          "field": "Attack_Time",
          "type": "ordinal",
          "scale": {
            "domain": ["Pre 9/11", "Post 9/11"],
            "range": ["#840032", "#E5DADA"]
          },
          "title": "Time Period"
        },
        "size": {"value": 100},
        "opacity": {"value": 1}
      }
    }
  ]
}